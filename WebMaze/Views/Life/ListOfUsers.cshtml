@using WebMaze.Models.Life
@using WebMaze.DbStuff.Model.Life 
@model List<UserViewModel>
@{
    Layout = "~/Views/Shared/Life/_LifeLayout.cshtml";
}

@section Scripts {
    @* Latest version of Bootstrap*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
}

<div class="container">
    <h3>Список пользователей в базе данных</h3>

    <div class="my-3">
        @if ((int)ViewData["quantity"] != 0)
        {
        <span>Только что было добавлено @ViewData["quantity"] пользователей.</span>
        }
    </div>

    <table class="table table-striped mb-3" id="users">
        <thead>
            <tr>
                <th>N</th>
                <th>Имя</th>
                <th>Логин</th>
                <th>Пароль</th>
                <th>Роли</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in @Model)
            {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Login</td>
                <td>@user.Password</td>
                <td>@user.RolesString</td>
            </tr>
            }
        </tbody>
    </table>

    @if (Model.Count == 0)
    {
        <p class="font-italic">
            Пользователей пока нет.
        </p>
    }

<a class="btn btn-primary" asp-action="Index" asp-controller="Life">Вернуться</a>
</div>

